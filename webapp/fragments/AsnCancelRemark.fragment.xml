<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Dialog
        id="idRemarkDialog"
        title="Add Remark"
        class="sapUiContentPadding"
        stretchOnPhone="true">
        
        <VBox class="sapUiSmallMargin">
            <!-- ASN Number Display -->
            <HBox>
            <Label text="ASN Number :" design="Bold" />
            <Label id="idAsnNumberText" text="{/SelectedASN}" />
            </HBox>
            <!-- Remark Input -->
            <Label text="Remark :" design="Bold" />
            <TextArea
                id="idRemarkInput"
                value="{/Remark}"
                placeholder="Enter your remark..."
                rows="4"
                width="100%" required="true" maxLength="100"/>
        </VBox>

        <beginButton>
            <Button
                text="Submit"
                type="Emphasized"
                press=".onSubmitRemark" />
        </beginButton>
        
        <endButton>
            <Button
                text="Cancel"
                press=".onCancelRemark" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
