<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <TableSelectDialog
        id="plantSelectDialog"
        title="Select Plant"
        growing="true"
        growingThreshold="12"
        multiSelect="true"
        items="{PlantModelVh>/Plants}"
        confirm=".onPlantConfirm"
        cancel=".onPlantCancel"
        search=".onPlantSearch"
        updateStarted=".onPlantUpdateStarted" class="sapUiResponsiveContentPadding">
        
        <columns>
            <Column><Text text="Plant"/></Column>
            <Column><Text text="Plant Name"/></Column>
        </columns>

        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{PlantModelVh>Plant}" />
                    <Text text="{PlantModelVh>PlantName}" />
                </cells>
            </ColumnListItem>
        </items>
    </TableSelectDialog> 
</core:FragmentDefinition>
