<mvc:View controllerName="hodek.vendorportal.controller.PurchaseOrder"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:svm="sap.ui.comp.smartvariants">
    <!-- <Page id="purchaseOrderpage" title="Vendor Portal" showFooter="true" titleAlignment="Auto" showNavButton="true" navButtonPress="onNavBack"> -->
        <f:DynamicPage id="_IDGenDynamicPage2" class="sapUiNoContentPadding" headerExpanded="{/headerExpanded}">
            <f:title>
                <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                    <f:navigationActions>
                        <Button id="_IDGenButton4" text="Next" type="Success" icon="sap-icon://open-command-field" press="onNavNext" class="sapUiSmallMarginEnd"/>
                    </f:navigationActions>
                    <f:heading>
                        <Title id="_IDGenTitle4" class="labelDesin" text="{RoutePoData>/PoHeader/PurchaseOrder}"/>
                    </f:heading>
                    <f:expandedContent>
                        <Label id="_IDGenLabel15" class="textDesin" text="{=${RoutePoData>/PoHeader/purchaseOrderText}?${RoutePoData>/PoHeader/purchaseOrderText}:'NA'}"/>

                    </f:expandedContent>
                    <f:snappedContent>
                        <Label id="_IDGenLabel16" class="textDesin" text="{=${RoutePoData>/PoHeader/purchaseOrderText}?${RoutePoData>/PoHeader/purchaseOrderText}:'NA'}"/>

                    </f:snappedContent>
                </f:DynamicPageTitle>
            </f:title>
            <f:header>
                <f:DynamicPageHeader id="_IDGenDynamicPageHeader1">
                    <f:content>
                        <HBox id="_IDGenHBox" alignItems="Center" justifyContent="Start">
                            <VBox id="_IDGenVBox15" alignItems="Start" alignContent="Center" justifyContent="Start" class="sapUiContentPadding">
                                <Label id="_IDGenLabel17" class="labelDesin" design="Bold" text="Plant" />
                                <!-- <Text id="idPoHeadPlant" class="sapUiTinyMarginBegin" text="{RoutePoData>/PoHeader/PlantName}"/> -->
                                <Text id="_IDGenText19" class="textDesin" text="{RoutePoData>/PoHeader/PlantName}({RoutePoData>/PoHeader/Plant})" />
                            </VBox>
                            <!-- <VBox id="_IDGenVBox16" alignItems="Start" alignContent="Center" justifyContent="Start" class="sapUiContentPadding">
                                <Label id="_IDGenLabel18" class="labelDesin" design="Bold" text="Purchase Order" />
            
                                <Text id="_IDGenText20" class="textDesin" text="{RoutePoData>/PoHeader/PurchaseOrder}" />
                            </VBox> -->
                            <VBox id="_IDGenVBox17" alignItems="Start" alignContent="Center" justifyContent="Start" class="sapUiContentPadding">
                                <Label id="_IDGenLabel19" class="labelDesin" design="Bold" text="Supplier" />
                                <!-- <Text id="idPoHeadSupplier" class="sapUiTinyMarginBegin" text="{RoutePoData>/PoHeader/Supplier}"/> -->
                                <Text id="_IDGenText21" class="textDesin" text="{RoutePoData>/PoHeader/SupplierName}({RoutePoData>/PoHeader/Supplier})" />
                            </VBox>
                            <VBox id="_IDGenVBox18" alignItems="Start" alignContent="Center" justifyContent="Start" class="sapUiContentPadding">
                                <Label id="_IDGenLabel20" class="labelDesin" design="Bold" text="Purchase Order Date" />
                                <!-- <Text id="idPoHeadOrderDate" class="sapUiTinyMarginBegin" text="{path: 'RoutePoData>/PoHeader/PurchaseOrderDate',formatter: '.formatter.formatDateToDDMMYYYY'}"/> -->
                                <Text id="_IDGenText22" class="textDesin" text="{path: 'RoutePoData>/PoHeader/PurchaseOrderDate',formatter: '.formatter.formatDateToDDMMYYYY'}"/>
                            </VBox>
                            <VBox id="_IDGenVBox19" alignItems="Start" alignContent="Center" justifyContent="Start" class="sapUiContentPadding">
                                <Label id="_IDGenLabel21" class="labelDesin" design="Bold" text="Sales Person" />
                                <!-- <Text id="idPoHeadSalesPerson" class="sapUiTinyMarginBegin" text="{RoutePoData>/PoHeader/SupplierRespSalesPersonName}"/> -->
                                <Text id="_IDGenText23" class="textDesin" text="{=${RoutePoData>/PoHeader/SupplierRespSalesPersonName}?${RoutePoData>/PoHeader/SupplierRespSalesPersonName}:'NA'}" emptyIndicatorMode="On"/>
                            </VBox>

                        </HBox>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <Table id="idPoItemTable"  mode="MultiSelect" multiSelectMode="SelectAll" growing="true" growingScrollToLoad="true"  growingThreshold="20" updateStarted="onUpdateStartPoHeaderTable" items="{PoItemModel>/POItems}" itemPress="onLineItemPress" sticky="ColumnHeaders,HeaderToolbar" selectionChange="onSelectionChange">
                    <headerToolbar>
                        <OverflowToolbar id="_IDGenOverflowToolbar">
                            <Title id="_IDGenTitle6" text="Items" level="H2"/>
                            <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                            <!-- <Button id="_IDGenButton3" tooltip="Sort" icon="sap-icon://sort" press="handleSortButtonPressed"/>
                            <Button id="_IDGenButton5" tooltip="Filter" icon="sap-icon://filter" press="handleFilterButtonPressed"/>
                            <Button id="_IDGenButton6" tooltip="Group" icon="sap-icon://group-2" press="handleGroupButtonPressed"/>
                            <ToggleButton id="_IDGenToggleButton1" icon="sap-icon://menu" tooltip="Enable Custom Context Menu" press="onToggleContextMenu" /> -->
                        </OverflowToolbar>
                    </headerToolbar>
                    <infoToolbar>
                        <OverflowToolbar id="_IDGenOverflowToolbar2" visible="false">
                            <Text id="_IDGenText14" />
                        </OverflowToolbar>
                    </infoToolbar>
                    <columns>
                        <Column id="_IDGenColumn6" visible="false">
                            <Text id="_IDGenText24" text="Purchase Order" />
                        </Column>
                        <Column id="_IDGenColumn8">
                            <Text id="_IDGenText25" text="Item" />
                        </Column>
                        <Column id="_IDGenColumn9" visible="false">
                            <Text id="_IDGenText26" text="Plant" />
                        </Column>
                        <Column id="_IDGenColumn10">
                            <Text id="_IDGenText27" text="Material" />
                        </Column>
                        <Column id="_IDGenColumn11">
                            <Text id="_IDGenText28" text="Delivery Date" />
                        </Column>
                        <Column id="_IDGenColumn12">
                            <Text id="_IDGenText29" text="Scheduled Qty" />
                        </Column>
                        <Column id="_IDGenColumn13">
                            <Text id="_IDGenText30" text="Delivered Qty" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1">
                            <cells>
                                <Text id="_IDGenText31" text="{PoItemModel>PurchaseOrder}" />
                                <Text id="_IDGenText32" text="{PoItemModel>PurchaseOrderItem}" />
                                <Text id="_IDGenText33" text="{PoItemModel>Plant}" />
                                <Text id="_IDGenText34" text="{PoItemModel>ItemDescription}({PoItemModel>Material})" />
                                <Text id="_IDGenText35" text="{path: 'PoItemModel>DeliveryDate', formatter: '.formatter.formatDateToDDMMYYYY'}" />
                                <Text id="_IDGenText36" text="{PoItemModel>ScheduleQty} {PoItemModel>PurchaseOrderQuantityUnit}" />
                                <Text id="_IDGenText37" text="{PoItemModel>DeliveredQty} {PoItemModel>PurchaseOrderQuantityUnit}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </f:content>
        </f:DynamicPage>
    <!-- </Page> -->
</mvc:View>